pipeline {
    agent any
    options { timestamps() }
    stages {
        stage('Étape 1 : Vérification') {
            steps {
                bat 'echo === Étape 1 : Vérification du dépôt ==='
                bat 'git status'
            }
        }
        stage('Étape 2 : Contenu') {
            steps {
                bat 'echo === Étape 2 : Afficher le contenu ==='
                bat 'dir'
            }
        }
        stage('Étape 3 : Simulation') {
            steps {
                bat 'echo === Étape 3 : Déploiement simulé ==='
                bat 'echo Le fichier index.html est prêt'
            }
        }
    }
    post {
        success { 
            echo '✅ Build REUSSI' 
        }
        failure { 
            echo '❌ Build ÉCHOUÉ' 
        }
    }
}